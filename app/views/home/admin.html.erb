<div class="forced">
  <div class="container">
  <div class="card">
    <canvas id="myChart" width="400" height="400"></canvas>
    <%= form_for @forced, url: new_forced_url do |f| %>
      <div class="form-group">
        <%= f.label :dt, 'Select the next forced rate date'%><br>
        <%= f.datetime_field :dt, hide_label: true, class: 'datepicker' %>
      </div>
      <div class="form-group">
        <%= f.label :value, 'Select the next forced rate value' %><br>
        <%= f.text_field :value, class: 'form-control' %>
      </div>
      <%= f.submit 'ok', class: 'btn btn-lg btn-block btn-primary' %>
    <% end %>
    </div>
  </div>
</div>

    <script>
var ctx = document.getElementById('myChart').getContext('2d');
var myChart = new Chart(ctx, {
    type: 'line',
    data: {
            labels:[ <% @dates.each do |d| %>
                    "<%= d %>", 
                  <% end %> ]
            ,
        datasets: [{
            label: 'forced rate by date',
                data: <%= @values %>,
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero: true
                }
            }]
        }
    }
});

    </script>
